! BGP configuration for amlight
!
hostname {{ AMLIGHT_HOSTNAME }}
password {{ AMLIGHT_PWD }}
!
!
router bgp {{ AMLIGHT_AS_NUM }}
  bgp router-id {{ AMLIGHT_RID }}
  timers bgp 3 9
  ! krenet
  neighbor {{ KRENET_RID }} remote-as {{ KRENET_AS_NUM }}
  neighbor {{ KRENET_RID }} ebgp-multihop
  neighbor {{ KRENET_RID }} timers connect 5
  neighbor {{ KRENET_RID }} advertisement-interval 5

  ! ONOS
  neighbor {{ SDN_IP_RID }} remote-as {{ SDN_IP_AS_NUM }}
  neighbor {{ SDN_IP_RID }} port 2000
  neighbor {{ SDN_IP_RID }} timers connect 5
  neighbor {{ SDN_IP_RID }} advertisement-interval 5
!
log stdout
